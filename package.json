{
  "name": "polymarket-weather-bot",
  "version": "1.0.0",
  "description": "Weather arbitrage bot for Polymarket - exploits mispriced weather events",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npx tsx src/index.ts",
    "scan": "npx tsx src/test/scan-weather-markets.ts",
    "analyze": "npx tsx src/test/analyze-opportunities.ts",
    "test:weather": "npx tsx src/test/fetch-weather.ts",
    "simulate": "npx tsx src/run-simulation.ts",
    "headless": "npx tsx src/headless.ts",
    "start:server": "npx tsx src/web/server.ts",
    "test": "jest",
    "test:file-ingestion": "jest src/test/file-based-ingestion.test.ts",
    "test:latency": "npx tsx src/test/latency-benchmark.ts",
    "test:s3-integration": "jest src/test/s3-integration.test.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.982.0",
    "@polymarket/clob-client": "^4.0.0",
    "axios": "^1.6.0",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dotenv": "^16.3.0",
    "ethers": "^5.8.0",
    "express": "^5.2.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
