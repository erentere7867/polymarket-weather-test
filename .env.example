# Polymarket Wallet Configuration
# Your Polygon wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# OpenWeatherMap API Key (free tier available at https://openweathermap.org/api)
# Required for international weather data
OPENWEATHER_API_KEY=your_openweather_api_key

# Bot Configuration
# Run in simulation mode (no real trades)
SIMULATION_MODE=true

# Maximum USDC per trade
MAX_POSITION_SIZE=10

# Minimum edge (as decimal) to trigger a trade
# 0.10 = 10% edge required
MIN_EDGE_THRESHOLD=0.10

# Polling interval in milliseconds
POLL_INTERVAL_MS=300000

# Logging level (debug, info, warn, error)
LOG_LEVEL=info
